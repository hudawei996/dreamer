<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:background="@color/background"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/layout_title_bar"/>

    <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/left"
            android:paddingRight="@dimen/right"
            android:layout_width="match_parent" android:layout_height="50dp">
        <TextView
                android:text="账户名"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:layout_width="80dp" android:layout_height="match_parent"/>

        <EditText android:layout_width="0dp"
                  android:layout_weight="1"
                  android:id="@+id/etMoBileName"
                  android:background="@null"
                  android:textSize="16sp"
                  android:hint="微信"
                  android:maxLines="1"
                  android:layout_height="match_parent"/>

    </LinearLayout>
    <LinearLayout
            android:layout_marginTop="0.5dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/left"
            android:paddingRight="@dimen/right"
            android:layout_width="match_parent" android:layout_height="50dp">
        <TextView
                android:text="用户名"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:layout_width="80dp" android:layout_height="match_parent"/>

        <EditText android:layout_width="0dp"
                  android:layout_weight="1"
                  android:background="@null"
                  android:textSize="16sp"
                  android:id="@+id/etMobileUsername"
                  android:hint="@string/app_name"
                  android:maxLines="1"
                  android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/left"
            android:paddingRight="@dimen/right"
            android:layout_width="match_parent" android:layout_height="50dp">
        <TextView
                android:text="账户余额"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:layout_width="80dp" android:layout_height="match_parent"/>

        <EditText android:layout_width="0dp"
                  android:layout_weight="1"
                  android:background="@null"
                  android:textSize="16sp"
                  android:hint="0.00"
                  android:id="@+id/etMobileAccount"
                  android:maxLines="1"
                  android:inputType="numberDecimal"
                  android:layout_height="match_parent"/>

    </LinearLayout>


    <LinearLayout
            android:layout_marginTop="20dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/left"
            android:paddingTop="@dimen/right"
            android:paddingBottom="@dimen/right"
            android:paddingRight="@dimen/right"
            android:layout_width="match_parent"
            android:layout_height="200dp">

        <EditText android:layout_width="0dp"
                  android:layout_weight="1"
                  android:background="@null"
                  android:textSize="16sp"
                  android:id="@+id/etMobileRemark"
                  android:hint="添加备注（50字以内）"
                  android:maxLength="50"
                  android:gravity="top"
                  android:layout_height="match_parent"/>

    </LinearLayout>


</LinearLayout>