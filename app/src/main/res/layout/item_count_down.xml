<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent"
                    android:paddingLeft="@dimen/left"

                    android:background="@color/white"
                    android:layout_height="70dp">


        <TextView android:layout_width="wrap_content"
                  android:id="@+id/tvName"
                  android:text="学会IOS开发"
                  android:textSize="16sp"
                  android:paddingTop="@dimen/left"
                  android:textColor="@color/colorBlack"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:textSize="10sp"
                  android:id="@+id/tvTime"
                  android:paddingTop="5dp"
                  android:textColor="@color/textHint"
                  android:text="2019-01-10 至 2019-09-20"
                  android:layout_below="@+id/tvName"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:text="10天"
                  android:paddingTop="@dimen/left"
                  android:id="@+id/tvDownCount"
                  android:textSize="15sp"
                  android:paddingRight="@dimen/right"
                  android:layout_alignBottom="@id/tvName"
                  android:layout_alignParentRight="true"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:text="2019-10-29"
                  android:textSize="10sp"
                  android:paddingRight="@dimen/right"
                  android:paddingTop="5dp"
                  android:id="@+id/tvCreatedTime"
                  android:layout_alignParentRight="true"
                  android:layout_below="@id/tvDownCount"
                  android:layout_height="wrap_content"/>


        <ImageView android:layout_width="30dp"
                   android:src="@mipmap/ic_out_time"
                   android:layout_alignParentTop="true"
                   android:id="@+id/ivOutTime"
                   android:visibility="gone"
                   android:layout_alignParentRight="true"
                   android:layout_height="30dp"/>


        <ImageView android:layout_width="30dp"
                   android:id="@+id/ivFinish"
                   android:visibility="gone"
                   android:src="@mipmap/ic_success"
                   android:layout_alignParentBottom="true"
                   android:layout_alignParentRight="true"
                   android:layout_height="30dp"/>
    </RelativeLayout>
    <View android:layout_width="match_parent"
          android:id="@+id/vLine"
          android:paddingLeft="@dimen/left"
          android:background="@color/background"
          android:layout_alignParentBottom="true"
          android:layout_height="0.5dp"
    />
</LinearLayout>