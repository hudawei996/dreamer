<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/layout_title_bar"/>


    <android.support.design.widget.TextInputLayout
            app:errorEnabled="true"
            app:counterEnabled="true"
            app:counterMaxLength="6"
            android:layout_marginTop="20dp"
            android:textColorHint="@color/hint"
            app:hintEnabled="true"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/hint"
            android:layout_marginLeft="@dimen/left"
            android:layout_marginRight="@dimen/right"
            android:hint="进入主界面需要输入该密码"
            android:id="@+id/til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText android:layout_width="match_parent"
                  android:inputType="numberPassword"
                  android:maxLength="6"
                  android:id="@+id/etPasswordLocal"
                  android:layout_height="wrap_content"/>
    </android.support.design.widget.TextInputLayout>


    <TextView
            android:id="@+id/tvPasswordState"
            android:layout_marginLeft="@dimen/left"
            android:text="当前状态：已关闭"
            android:textColor="@color/hint"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"/>
    <TextView

            android:padding="15dp"
            android:text="开启"
            android:id="@+id/tvSave"
            android:letterSpacing="1"
            android:background="@drawable/btn_text_view_background"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>