<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:background="@color/background"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView android:layout_width="match_parent"
                android:scrollbars="none"
                android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent" android:layout_height="match_parent">


            <RelativeLayout
                    android:layout_marginTop="15dp"
                    android:id="@+id/rlPerson"
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent" android:layout_height="wrap_content">


                <TextView
                        android:id="@+id/tvNickname"
                        android:layout_toRightOf="@id/ivHeader"
                        android:text="追梦者"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/me_margin_left"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:layout_below="@id/tvNickname"
                        android:text="天天记账，早日实现财富自由"
                        android:gravity="center"
                        android:layout_alignLeft="@id/tvNickname"
                        android:layout_marginTop="5dp"
                        android:id="@+id/tvIntroduce"
                        android:textColor="@color/colorBase"
                        android:layout_width="wrap_content"
                        android:textSize="10sp"
                        android:layout_marginBottom="15dp"
                        android:layout_height="wrap_content"/>

                <ImageView android:layout_width="@dimen/right_size"
                           android:layout_height="@dimen/right_size"
                           android:src="@mipmap/ic_right"
                           android:layout_centerVertical="true"
                           android:layout_alignParentRight="true"
                           android:layout_marginRight="@dimen/me_margin_right"
                />

                <ImageView
                        android:id="@+id/ivHeader"
                        android:src="@mipmap/singer"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/me_margin_left"
                        android:layout_width="50dp" android:layout_height="50dp"/>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_marginTop="20dp"

                    android:background="@color/colorWhite"
                    android:layout_width="match_parent" android:layout_height="@dimen/me_height">
                <ImageView android:layout_width="@dimen/me_image_size"
                           android:layout_height="@dimen/me_image_size"
                           android:id="@+id/ivPasswordManager"
                           android:layout_centerVertical="true"
                           android:layout_marginLeft="@dimen/me_margin_left"
                           android:src="@mipmap/ic_password_me"/>

                <TextView
                        android:text="密码"
                        android:textColor="@color/colorBlack"
                        android:layout_toRightOf="@id/ivPasswordManager"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                <View android:layout_width="match_parent"
                      android:layout_alignParentBottom="true"
                      android:background="@color/background"
                      android:layout_marginLeft="20dp"
                      android:layout_height="0.1dp"/>

                <ImageView android:layout_width="@dimen/right_size"
                           android:layout_height="@dimen/right_size"
                           android:src="@mipmap/ic_right"
                           android:layout_centerVertical="true"
                           android:layout_alignParentRight="true"
                           android:layout_marginRight="@dimen/me_margin_right"
                />

                <View android:layout_width="match_parent"
                      android:background="@color/background"
                      android:layout_height="0.1dp"/>
            </RelativeLayout>

            <RelativeLayout
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent" android:layout_height="@dimen/me_height">
                <ImageView android:layout_width="@dimen/me_image_size"
                           android:layout_height="@dimen/me_image_size"
                           android:id="@+id/ivMoneyManager"
                           android:layout_centerVertical="true"
                           android:layout_marginLeft="@dimen/me_margin_left"
                           android:src="@mipmap/ic_money_me"/>

                <TextView
                        android:text="财务"
                        android:textColor="@color/colorBlack"
                        android:layout_toRightOf="@id/ivMoneyManager"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                <ImageView android:layout_width="@dimen/right_size"
                           android:layout_height="@dimen/right_size"
                           android:src="@mipmap/ic_right"
                           android:layout_centerVertical="true"
                           android:layout_alignParentRight="true"
                           android:layout_marginRight="@dimen/me_margin_right"
                />
                <View android:layout_width="match_parent"
                      android:layout_alignParentBottom="true"
                      android:background="@color/background"

                      android:layout_marginLeft="20dp"
                      android:layout_height="0.1dp"/>


            </RelativeLayout>

            <RelativeLayout
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent" android:layout_height="@dimen/me_height">
                <ImageView android:layout_width="@dimen/me_image_size"
                           android:layout_height="@dimen/me_image_size"
                           android:id="@+id/ivTimelineManager"
                           android:layout_centerVertical="true"
                           android:layout_marginLeft="@dimen/me_margin_left"
                           android:src="@mipmap/ic_time_me"/>

                <TextView
                        android:text="时间轴"
                        android:textColor="@color/colorBlack"
                        android:layout_toRightOf="@id/ivTimelineManager"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                <ImageView android:layout_width="@dimen/right_size"
                           android:layout_height="@dimen/right_size"
                           android:src="@mipmap/ic_right"
                           android:layout_centerVertical="true"
                           android:layout_alignParentRight="true"
                           android:layout_marginRight="@dimen/me_margin_right"
                />
                <View android:layout_width="match_parent"
                      android:layout_alignParentBottom="true"
                      android:background="@color/background"
                      android:layout_height="0.1dp"/>


            </RelativeLayout>

            <RelativeLayout
                    android:paddingLeft="5dp"
                    android:id="@+id/rlContact"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent" android:layout_height="@dimen/me_height">

                <TextView android:layout_width="40dp"
                          android:layout_height="match_parent"
                          android:gravity="center"
                          android:textSize="22sp"
                          android:visibility="gone"
                          android:textColor="@color/chart_color_5"

                          android:id="@+id/tvContact"
                          android:layout_centerVertical="true"
                          android:layout_marginLeft="@dimen/me_margin_left"
                          android:src="@mipmap/ic_setting"/>

                <TextView
                        android:text="联系我"
                        android:textColor="@color/colorBlack"
                        android:layout_toRightOf="@id/tvContact"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                <View android:layout_width="match_parent"
                      android:layout_alignParentBottom="true"
                      android:background="@color/background"
                      android:layout_height="0.1dp"/>
                <ImageView android:layout_width="@dimen/right_size"
                           android:layout_height="@dimen/right_size"
                           android:src="@mipmap/ic_right"
                           android:layout_centerVertical="true"
                           android:layout_alignParentRight="true"
                           android:layout_marginRight="@dimen/me_margin_right"/>

            </RelativeLayout>
            <RelativeLayout
                    android:paddingLeft="5dp"
                    android:id="@+id/rlAboutOur"
                    android:layout_marginTop="0.5dp"
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent" android:layout_height="@dimen/me_height">

                <TextView android:layout_width="40dp"
                          android:layout_height="match_parent"
                          android:gravity="center"
                          android:textSize="25sp"
                          android:textColor="@color/chart_color_5"
android:visibility="gone"
                          android:id="@+id/tvAboutMe"
                          android:layout_centerVertical="true"
                          android:layout_marginLeft="@dimen/me_margin_left"
                          android:src="@mipmap/ic_setting"/>

                <TextView
                        android:text="关于我"
                        android:textColor="@color/colorBlack"
                        android:layout_toRightOf="@id/tvAboutMe"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                <View android:layout_width="match_parent"
                      android:layout_alignParentBottom="true"
                      android:background="@color/background"
                      android:layout_height="0.1dp"/>
                <ImageView android:layout_width="@dimen/right_size"
                           android:layout_height="@dimen/right_size"
                           android:src="@mipmap/ic_right"
                           android:layout_centerVertical="true"
                           android:layout_alignParentRight="true"
                           android:layout_marginRight="@dimen/me_margin_right"/>

            </RelativeLayout>
            <RelativeLayout
                    android:paddingLeft="5dp"
                    android:id="@+id/rlFeedback"
                    android:layout_marginTop="0.5dp"
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent" android:layout_height="@dimen/me_height">

                <TextView android:layout_width="40dp"
                          android:layout_height="match_parent"
                          android:gravity="center"
                          android:textColor="@color/chart_color_5"
                          android:textSize="22sp"
                          android:visibility="gone"
                          android:id="@+id/tvFeedback"
                          android:layout_centerVertical="true"
                          android:layout_marginLeft="@dimen/me_margin_left"
                          android:src="@mipmap/ic_setting"/>

                <TextView
                        android:text="在线反馈"
                        android:textColor="@color/colorBlack"
                        android:layout_toRightOf="@id/tvFeedback"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                <View android:layout_width="match_parent"
                      android:layout_alignParentBottom="true"
                      android:background="@color/background"
                      android:layout_height="0.1dp"/>
                <ImageView android:layout_width="@dimen/right_size"
                           android:layout_height="@dimen/right_size"
                           android:src="@mipmap/ic_right"
                           android:layout_centerVertical="true"
                           android:layout_alignParentRight="true"
                           android:layout_marginRight="@dimen/me_margin_right"/>

            </RelativeLayout>


            <RelativeLayout
                    android:id="@+id/rlSetting"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="5dp"
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent" android:layout_height="@dimen/me_height">

                <TextView android:layout_width="40dp"
                          android:layout_height="match_parent"
                          android:gravity="center"
                          android:textColor="@color/chart_color_1"
                          android:textSize="22sp"
                          android:id="@+id/tvSettings"
                          android:visibility="gone"
                          android:layout_centerVertical="true"
                          android:layout_marginLeft="@dimen/me_margin_left"
                          android:src="@mipmap/ic_setting"/>

                <TextView
                        android:text="设置"
                        android:textColor="@color/colorBlack"
                        android:layout_toRightOf="@id/tvSettings"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                <View android:layout_width="match_parent"
                      android:layout_alignParentBottom="true"
                      android:background="@color/background"
                      android:layout_height="0.1dp"/>
                <ImageView android:layout_width="@dimen/right_size"
                           android:layout_height="@dimen/right_size"
                           android:src="@mipmap/ic_right"
                           android:layout_centerVertical="true"
                           android:layout_alignParentRight="true"
                           android:layout_marginRight="@dimen/me_margin_right"
                />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>