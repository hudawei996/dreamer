<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@color/colorWhite"
                android:layout_height="80dp">

    <TextView
            android:text="午餐"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:id="@+id/tvFinanceTodayName"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:layout_below="@id/tvFinanceTodayName"
              android:layout_alignLeft="@id/tvFinanceTodayName"
              android:text="2018-10-10 12:12"
              android:textSize="12sp"
              android:layout_marginTop="5dp"
              android:textColor="@color/colorBase"
              android:id="@+id/tvFinanceTodayTime"
              android:maxLines="1"
              android:ellipsize="end"
              android:layout_height="wrap_content"/>

    <TextView
            android:text="1000"
            android:textSize="16sp"
            android:id="@+id/tvFinanceTodayAccount"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    <View android:layout_width="match_parent"
          android:layerType="software"
          android:id="@+id/vBottomLine"
          android:layout_alignParentBottom="true"
          android:layout_marginLeft="15dp"
          android:background="@drawable/dash_line_bg"
          android:layout_height="2dp"/>

</RelativeLayout>