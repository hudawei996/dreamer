<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <View android:layout_width="match_parent"
          android:layout_height="2dp"
          android:id="@+id/vTop"
          android:background="@color/finance_base_color"/>
    <TextView android:layout_width="match_parent"
              android:paddingTop="10dp"
              android:background="@color/finance_base_color"
              android:textColor="@color/colorWhite2"
              android:text="终极目标"
              android:gravity="center_horizontal"
              android:textSize="10sp"
              android:layout_height="30dp"/>
    <TextView android:layout_width="match_parent"
              android:gravity="center"
              android:text="实现财富自由"
              android:textSize="18sp"
              android:paddingBottom="15dp"
              android:textColor="@color/colorWhite"
              android:background="@color/finance_base_color"
              android:layout_height="40dp"/>

    <TextView
            android:text="近期目标"
            android:textSize="10sp"
            android:layout_marginTop="70dp"
            android:textColor="@color/hint"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:text="看完Linux"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorBlack"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:text="2019-01-16 至 2019-02-26"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/hint"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <View android:layout_width="0dp"
              android:id="@+id/center"
              android:layout_height="0dp"
              android:layout_centerInParent="true"/>

        <TextView
                android:id="@+id/tvDay"
                android:text="天"
                android:textSize="26sp"
                android:layout_toLeftOf="@id/center"
                android:textColor="@color/colorBlack"
                android:layout_gravity="center"
                android:paddingRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvDayCount"
                android:text="10"
                android:paddingRight="10dp"
                android:textSize="26sp"
                android:layout_toLeftOf="@id/tvDay"
                android:textColor="@color/finance_base_color"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvHour"
                android:text="时"
                android:paddingLeft="10dp"
                android:textSize="26sp"
                android:layout_toRightOf="@id/tvHourCount"
                android:textColor="@color/colorBlack"
                android:layout_gravity="center"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvHourCount"
                android:text="07"
                android:paddingLeft="10dp"
                android:textSize="26sp"
                android:layout_toRightOf="@id/center"
                android:textColor="@color/finance_base_color"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>