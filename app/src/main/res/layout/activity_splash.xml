<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">

    <ImageView
            android:id="@+id/ivAd"
            android:background="@drawable/pig_year"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:layout_weight="1"/>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:id="@+id/rlOtherHint"
                    android:background="@color/background"
                    android:layout_height="0dp">


        <TextView
                android:id="@+id/tvCountDownTarget"
                android:background="@color/background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Hello Dreamer"
                android:gravity="center_horizontal"
                android:textSize="22sp"
                android:letterSpacing="0.1"
                android:textColor="@color/black"
                android:paddingTop="150dp"
        />

        <TextView android:layout_width="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_alignParentTop="true"
                  android:layout_marginTop="30dp"
                  android:layout_marginRight="30dp"
                  android:text="2"
                  android:id="@+id/tvCountDownTime"
                  android:textSize="18sp"
                  android:textColor="@color/white"
                  android:layout_height="wrap_content"/>

    </RelativeLayout>


    <RelativeLayout
            android:id="@+id/rlLogo"
            android:background="#ff6766"
            android:layout_width="match_parent"
            android:layout_height="100dp">
        <View
                android:id="@+id/vCenter"
                android:layout_width="1dp"
                android:layout_marginRight="-20dp"
                android:layout_height="wrap_content" android:layout_centerHorizontal="true"/>

        <ImageView
                android:layout_toLeftOf="@id/vCenter"
                android:id="@+id/ivLogo"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_centerHorizontal="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_logo"/>

        <TextView
                android:layout_toRightOf="@id/vCenter"
                android:textColor="@color/colorWhite"
                android:text="@string/app_name"
                android:layout_alignTop="@id/ivLogo"
                android:gravity="left"
                android:textSize="14sp"
                android:paddingTop="5dp"
                android:id="@+id/tvAppName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_toRightOf="@id/vCenter"
                android:textColor="@color/colorWhite"
                android:layout_alignParentBottom="true"
                android:text="为您量身定制的APP"
                android:layout_below="@id/tvAppName"
                android:gravity="left"
                android:textSize="10sp"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


    </RelativeLayout>

</LinearLayout>