<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/colorWhite"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/layout_title_bar"/>

    <ScrollView android:layout_width="fill_parent"
                android:scrollbars="none"
                android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent" android:layout_height="match_parent">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">
                <TextView
                        android:textColor="@color/colorPrimary"
                        android:text="书名:"
                        android:textSize="18sp"
                        android:letterSpacing="0.5"

                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                <EditText
                        android:id="@+id/etBookName"
                        android:textColor="@color/colorBase"
                        android:background="@null"
                        android:textSize="18sp"
                        android:maxLines="1"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layerType="software"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/dash_line_bg"/>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">
                <TextView
                        android:textColor="@color/colorPrimary"
                        android:text="起始:"
                        android:textSize="18sp"
                        android:letterSpacing="0.5"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                <TextView
                        android:id="@+id/tvBookBegin"
                        android:textColor="@color/colorBase"
                        android:background="@null"
                        android:textSize="18sp"
                        android:maxLines="1"
                        android:text="2018-10-10"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

            </LinearLayout>


            <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layerType="software"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/dash_line_bg"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">
                <TextView
                        android:textColor="@color/colorPrimary"
                        android:text="结束:"
                        android:textSize="18sp"
                        android:letterSpacing="0.5"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                <TextView
                        android:id="@+id/tvBookEnd"
                        android:textColor="@color/colorBase"
                        android:background="@null"
                        android:textSize="18sp"
                        android:maxLines="1"
                        android:text="在读"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layerType="software"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/dash_line_bg"/>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="153dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                <TextView
                        android:textColor="@color/colorPrimary"
                        android:text="内容:"
                        android:textSize="18sp"
                        android:letterSpacing="0.5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                <EditText
                        android:id="@+id/etBookContent"
                        android:textColor="@color/colorBase"
                        android:background="@drawable/edit_background"
                        android:textSize="12sp"
                        android:padding="5dp"
                        android:letterSpacing="0.05"
                        android:lineSpacingExtra="2dp"
                        android:gravity="top"
                        android:hint="书本大概讲了什么事呢？"
                        android:layout_marginLeft="15dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="150dp"/>

            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layerType="software"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/dash_line_bg"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="153dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                <TextView
                        android:textColor="@color/colorPrimary"
                        android:text="收获:"
                        android:textSize="18sp"
                        android:letterSpacing="0.5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                <EditText
                        android:id="@+id/etBookEvaluate"
                        android:textColor="@color/colorBase"
                        android:background="@drawable/edit_background"
                        android:textSize="12sp"
                        android:padding="5dp"
                        android:gravity="top"
                        android:letterSpacing="0.05"
                        android:lineSpacingExtra="2dp"
                        android:hint="读完这本书收获了什么呢？"
                        android:layout_marginLeft="15dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="150dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>