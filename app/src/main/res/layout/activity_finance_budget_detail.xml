<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/background"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/layout_title_bar"/>


    <RelativeLayout
            android:background="@color/finance_base_color"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="150dp">
        <TextView
                android:layout_above="@+id/tvBudgetBalance"
                android:text="预算余额"
                android:id="@+id/tvBudgetBalanceHint"
                android:textColor="@color/colorWhite2"
                android:textSize="14sp"
                android:paddingBottom="5dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvBudgetBalance"
                android:textColor="@color/colorWhite"
                android:textSize="35sp"
                android:layout_centerInParent="true"
                android:text="10000.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tvBudgetTotal"
                android:paddingTop="5dp"
                android:textColor="@color/colorWhite2"
                android:textSize="14sp"
                android:layout_below="@+id/tvBudgetBalance"
                android:text="总预算 0.00"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/rvFinanceBudgetDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</LinearLayout>