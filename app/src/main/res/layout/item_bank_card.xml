<?item_bank_card_add version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <RelativeLayout
            android:background="@drawable/bank_card_background"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="120dp">

        <TextView
                android:id="@+id/tvBank"
                android:text="银行"
                android:maxLines="1"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@id/tvBalance"
                android:textSize="40sp"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tvBalance"
                android:textColor="@color/colorWhite"
                android:text="￥1000"
                android:textSize="20sp"
                android:gravity="center"

                android:layout_marginTop="25dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tvBankNumber"
                android:textColor="@color/colorWhite"
                android:text="6567 8890 0989 0909"
                android:letterSpacing="0.05"
                android:layout_below="@id/tvBank"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tvBankId"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:text="20181109"
                android:textSize="8sp"
                android:textColor="@color/colorWhite"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>
</LinearLayout>