<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@color/background"
                android:layout_height="match_parent">

    <View
            android:elevation="1dp"
            android:id="@+id/vOval"
            android:layout_centerHorizontal="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/oval"/>

    <View
            android:elevation="1dp"
            android:id="@+id/vLine"
            android:layout_centerHorizontal="true"
            android:layout_width="20dp"
            android:layout_below="@id/vOval"
            android:layout_height="100dp"
            android:background="@drawable/full_line_vertical"/>

    <TextView
            android:id="@+id/tvContent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/colorBase"
            android:layout_toLeftOf="@id/vLine"
            android:layout_marginRight="10dp"
            android:text="《成功人士的七大习惯》"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <View
            android:elevation="1dp"
            android:id="@+id/vBottomOval"
            android:layout_centerHorizontal="true"
            android:layout_width="20dp"
            android:layout_below="@id/vLine"
            android:layout_height="20dp"
            android:background="@drawable/oval_finish"/>

    <TextView
            android:id="@+id/tvStartTime"
            android:layout_marginRight="15dp"
            android:layout_marginTop="35dp"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="2dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorBase"
            android:layout_toRightOf="@id/vLine"
            android:text="始 2018-10-10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tvEndTime"
            android:layout_below="@id/tvStartTime"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="2dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorBase"
            android:layout_toRightOf="@id/vLine"
            android:text="至 2018-11-11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>