<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/colorWhite"
              android:layout_marginTop="10dp"
              android:layout_width="match_parent"
              android:layout_height="80dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/left"
            android:paddingRight="@dimen/right"
            android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:text="微信"
                  android:textColor="@color/colorBlack2"
                  android:id="@+id/tvBankName"
                  android:paddingTop="10dp"
                  android:textSize="10sp"
                  android:paddingBottom="5dp"
                  android:layout_height="wrap_content"/>

        <TextView
                android:layout_below="@id/tvBankName"
                android:id="@+id/tvBankAccount"
                android:maxLines="1"
                android:textColor="@color/colorBlack"
                android:text="100.00"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/tvDebt"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_below="@id/tvBankAccount"
                android:text="总资产 1400"
                android:textColorHint="@color/colorBlack2"
                android:textSize="10sp"
                android:paddingTop="5dp"
                android:id="@+id/tvAmount"
                android:textColor="@color/hint"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tvDebt"
                android:layout_alignParentRight="true"
                android:text="-1400"
                android:gravity="center_vertical"
                android:textColor="@color/colorBlack2"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <View android:layout_width="match_parent"
              android:layout_height="2dp"
              android:layerType="software"
              android:layout_alignParentBottom="true"
              android:layout_marginLeft="20dp"
              android:background="@drawable/dash_line_bg"/>


    </RelativeLayout>



</LinearLayout>