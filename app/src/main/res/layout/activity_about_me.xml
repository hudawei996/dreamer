<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/layout_title_bar"/>


    <ImageView android:layout_width="wrap_content"
               android:src="@mipmap/ic_logo"
               android:layout_marginTop="20dp"
               android:layout_gravity="center_horizontal"
               android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:layout_gravity="center_horizontal"
              android:text="1.0.0"
              android:id="@+id/tvVersions"
              android:layout_height="wrap_content"/>

    <LinearLayout
            android:layout_marginTop="10dp"
            android:padding="25dp"
            android:orientation="vertical"
            android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent"
                  android:text="敬爱的用户："
                  android:id="@+id/tvAbout"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="match_parent"
                  android:text="         非常感谢您使用我独自开发的App,愿可以成为您生活的伴侣。"
                  android:lineSpacingExtra="5dp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="match_parent"
                  android:text="         如果想和我做朋友，可以加我微信。个人目前主要专攻Android，在其他知识点也有所涉猎。技术上还在不断学习和提升，望各位朋友多多指导！"
                  android:lineSpacingExtra="2dp"
                  android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView android:layout_width="match_parent"
              android:text="历史版本"
              android:textColor="@color/chart_color_1"
              android:gravity="right"
              android:paddingRight="20dp"
              android:paddingLeft="@dimen/left"
              android:layout_height="wrap_content"/>
</LinearLayout>